{
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/firefox-webext-browser": "^120.0.4",
    "postcss": "^8.5.6",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.3",
    "concurrently": "^8.2.2",
    "cpx": "^1.5.0",
    "rollup": "^4.44.1",
    "rollup-plugin-copy": "^3.5.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "web-ext": "^8.9.0"
  },
  "scripts": {
    "build:prod": "rollup -c && cpx \"src/**/*.{json,html,png,svg}\" dist && npx web-ext build --source-dir dist --artifacts-dir ./ --overwrite-dest",
    "build": "rollup -c && cpx \"src/**/*.{json,html,png,svg}\" dist",
    "dev": "concurrently \"rollup -c --watch\" \"cpx \\\"src/**/*.{json,html,png,svg}\\\" dist --watch\" \"web-ext run --source-dir dist\"",
    "web": "web-ext run --source-dir dist"
  }
}
